<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="DefaultTheme" parent="android:Theme.Holo">
        <item name="android:windowBackground">@drawable/v5_window_bg_dark</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions">useLogo</item>
        <!-- <item name="android:homeLayout">@layout/v5_action_bar_home</item> -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="HomeTheme" parent="@style/DefaultTheme"></style>

    <style name="ChannelTheme" parent="@style/DefaultTheme"></style>

    <style name="SearchTheme" parent="@style/DefaultTheme">
        <!--
             <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.SearchActionBarTitle</item>
        <item name="miui:v5_action_bar_title_layout">@layout/rewrite_v5_search_title_bar</item>
        <item name="miui:v5_title_bar_back_button_search_mode">?android:homeAsUpIndicator</item>
        <item name="miui:v5_title_bar_bg_search_mode">@drawable/search_edit_title_bg</item>
        -->
    </style>

    <style name="V5.TextAppearance.Title" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">5.0</item>
        <item name="android:shadowRadius">10.0</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">@dimen/v5_text_font_size_title</item>
        <item name="android:shadowColor">@color/v5_title_text_shadow_light</item>
    </style>

    <style name="SearchMode">
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/search_edit_title_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/V5.TextAppearance.Title</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/v5_title_text_shadow_light</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">5.0</item>
        <item name="android:shadowRadius">10.0</item>
    </style>

    <style name="V5.TextAppearance.EditText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/v5_text_font_size_textedit</item>
        <item name="android:textColor">@color/v5_edit_text_color_dark</item>
    </style>

    <style name="V5.Widget.EditText.Search" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/v5_edit_text_search_bg_light</item>
        <item name="android:drawableRight">@drawable/v5_edit_text_search_clear_btn_light</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textSize">@dimen/v5_text_font_size_textedit</item>
        <item name="android:textColor">@color/v5_edit_text_color_dark</item>
        <item name="android:textAppearance">@style/V5.TextAppearance.EditText</item>
        <item name="android:gravity">left|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/v5_text_cursor_holo</item>
    </style>

    <style name="Back">
        <item name="android:background">@drawable/v5_title_bar_back_button_light</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="DetailBack">
        <item name="android:background">@drawable/v5_detail_bar_back_button_light</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:background">@drawable/v5_progress_bar_bg_light</item>
        <item name="android:maxWidth">@dimen/v5_progress_bar_size</item>
        <item name="android:maxHeight">@dimen/v5_progress_bar_size</item>
        <item name="android:indeterminateDrawable">@drawable/v5_progress_bar_ani_light</item>
        <item name="android:minWidth">@dimen/v5_progress_bar_size</item>
        <item name="android:minHeight">@dimen/v5_progress_bar_size</item>
    </style>

</resources>