<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/media_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cover_text_margin_horizontal"
            android:layout_marginRight="@dimen/cover_text_margin_horizontal"
            android:layout_marginTop="@dimen/cover_text_margin_margin_top"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/p_80_white"
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/media_item_status"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginBottom="@dimen/cover_text_margin_margin_bottom"
            android:layout_marginLeft="@dimen/cover_text_margin_horizontal"
            android:layout_marginRight="@dimen/cover_text_margin_horizontal"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/p_50_white"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>

    <TextView
        android:id="@+id/media_item_nameex"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cover_text_margin_horizontal"
        android:layout_marginRight="@dimen/cover_text_margin_horizontal"
        android:layout_marginTop="@dimen/cover_text_margin_margin_top"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textColor="@color/p_80_white"
        android:textSize="@dimen/text_size_24"
        android:textStyle="bold" />

</FrameLayout>